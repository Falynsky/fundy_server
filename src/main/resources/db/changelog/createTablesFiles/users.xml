<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
	<changeSet id="1" author="kfa">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists schemaName="dbo" tableName="users" />
			</not>
		</preConditions>
		<comment>
			Create users table
		</comment>
		<createTable schemaName="dbo" tableName="users">
			<column name="id" type="int" />
			<column name="username" type="varchar(255)" />
			<column name="password" type="varchar(255)" />
			<column name="mail" type="varchar(255)" />
			<column name="role" type="varchar(255)" />
		</createTable>
		<addNotNullConstraint tableName="users" columnName="id" columnDataType="int" />
		<addNotNullConstraint tableName="users" columnName="username" columnDataType="varchar(255)" />
		<addNotNullConstraint tableName="users" columnName="password" columnDataType="varchar(255)" />
		<addNotNullConstraint tableName="users" columnName="mail" columnDataType="varchar(255)" />
		<addNotNullConstraint tableName="users" columnName="role" columnDataType="varchar(255)" />

		<addPrimaryKey tableName="users" columnNames="id" />

		<addUniqueConstraint tableName="users" columnNames="username" />
		<addUniqueConstraint tableName="users" columnNames="mail" />
	</changeSet>
</databaseChangeLog>
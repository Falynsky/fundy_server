<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="8" author="kfa">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="dbo" tableName="licences"/>
            </not>
        </preConditions>
        <comment>Create admin licences table</comment>
        <createTable
                schemaName="dbo"
                tableName="licences">
            <column name="id" type="int"/>
            <column name="licence_key" type="varchar(255)"/>
            <column name="licence_role" type="varchar(255)"/>
        </createTable>
        <addNotNullConstraint tableName="licences" columnName="id" columnDataType="int"/>
        <addNotNullConstraint tableName="licences" columnName="licence_key" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="licences" columnName="licence_role" columnDataType="varchar(255)"/>
        <addPrimaryKey tableName="licences" columnNames="id"/>
        <addUniqueConstraint tableName="licences" columnNames="licence_key"/>
    </changeSet>
</databaseChangeLog>

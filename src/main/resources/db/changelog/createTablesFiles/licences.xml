<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="16" author="kfa">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="dbo" tableName="licences"/>
            </not>
        </preConditions>
        <comment>Create licences table</comment>
        <createTable
                schemaName="dbo"
                tableName="licences">
            <column name="id" type="int"/>
            <column name="mail" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
        </createTable>

        <addNotNullConstraint tableName="licences" columnName="id" columnDataType="int"/>
        <addNotNullConstraint tableName="licences" columnName="mail" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="licences" columnName="type" columnDataType="varchar(255)"/>

        <addPrimaryKey tableName="licences" columnNames="id"/>
        <addUniqueConstraint tableName="licences" columnNames="mail"/>

    </changeSet>
</databaseChangeLog>
